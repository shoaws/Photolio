<table class="table table-hover" style="height: 80%;">
  <% members.each do |member| %>
    <tr>
      <td style="width: 100px;">
        <%= image_tag member.get_profile_image, size: "40x40", class: "member-icon" %>
      </td>
      <td>
        <%= member.nickname %>
      </td>
      <td class="text-right">
        <%= link_to member_path(member) do %>
          >
        <% end %>
      </td>
    </tr>
  <% end %>
</table>