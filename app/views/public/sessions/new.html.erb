<div class="container">
  
  <h4><span class="py-2 px-4 bg-light">ログイン</spna></h4>

  <div class="row mt-5">
    <%#= render "layouts/errors", obj: @customer %>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-1 mt-3">
      <h5 class="text-center bg-light">会員の方はこちらからログイン</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
    <%= form_with model: @member, url: member_session_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <td width="20%" class="align-middle"><span>メールアドレス</span></td>
          <td width="80%"><%= f.text_field :email, autofocus: true, autocomplete: "email", size: "50x30", style: "border-radius:8px;", class: "form-control" %></td>
        </tr>
        <tr>
          <td class="align-middle">パスワード</td>
          <td><%= f.password_field :password, autocomplete: "current-password", size: "50x30", style: "border-radius:8px;", class: "form-control" %></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: "btn btn-primary mt-4 mb-5", style: "width: 30%;" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <h5 class="text-center bg-light">会員登録がお済みでない方</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-log-4 offset-md-3">
      <%= link_to "こちら", new_member_registration_path %>　から新規登録を行ってください。
    </div>
  </div>
</div>