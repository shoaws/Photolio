<div class="container">

  <h4 class="text-center font-weight-bold">ログイン</h4>

  <div class="row mt-5">
    <%= render "layouts/errors", obj: @member %>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-1 mt-3">
      <h5 class="text-center">メンバーの方はこちらからログイン</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
    <%= form_with model: @member, url: member_session_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <td width="20%" class="align-middle"><%= f.label :email, class: "my-auto" %></td>
          <td width="80%"><%= f.text_field :email, autofocus: true, autocomplete: "email", size: "50x30", style: "border-radius:8px;", class: "form-control" %></td>
        </tr>
        <tr>
          <td class="align-middle"><%= f.label :password, class: "my-auto" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password", size: "50x30", style: "border-radius:8px;", class: "form-control" %></td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit "ログイン", class: "btn btn-primary mt-4 mb-5", style: "width: 30%;" %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="text-right">
    <p>
      <span class="p-3 text-white bg-secondary">
        登録がまだの方は
        <%= link_to "こちら", new_member_registration_path, class: "h4 text-white" %>
        から新規登録を行ってください。
      </span>
    </p>
  </div>
</div>