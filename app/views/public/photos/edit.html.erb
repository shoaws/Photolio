<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Edit Photo</h2>
    <%= form_with model:@photo do |f| %>
      <%= render 'layouts/errors', obj: @photo %>
      <div class="my-4" style="height: 250px;">
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, accept: 'image/*', onchange: "previewImage(this);" %>
        </div>
        <div class="text-center">
          <%= image_tag @photo.image, id: "preview", style: "width: 200px; height: 200px; object-fit: contain;" %>
        </div>
      </div>
     <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, placeholder: "50文字まで", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="text-center form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to '< My Photos', member_path(current_member), class: "mr-5 btn btn-secondary" %>
      <%= link_to 'All Photos >', photos_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<%= render 'layouts/previewimage' %>