<div class="container">
  <h2>New Photo</h2>
  <div class="row">
    <% if current_member.email == "guest@example.com" && current_member.photos.count > 0 %>
      <p class="mt-5 pt-5 text-center font-weight-bold" style="height: 40vh">
        メンバー登録をして</br>
        もっとたくさんの写真を展示しましょう！
      </p>
    <% else %>
      <div class="col-6">
        <%= form_with model:@photo do |f| %>
        <%= render 'layouts/errors', obj: @photo %>
        <div class="my-4" style="height: 50vh;">
          <div class="form-group">
            <%= f.label :image, class: "lead" %>
            <%= f.file_field :image, accept: 'image/*', onchange: "previewImage(this);" %>
          </div>
          <div class="text-center">
            <img id="preview" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" style="width: 100%; height: 45vh; object-fit: contain;"></img>
          </div>
        </div>
      </div>
      <div class="col-6">
       <div class="form-group">
          <%= f.label :body, class: "lead" %>
          <%= f.text_area :body, placeholder: "50文字まで", class: "form-control", style: "height: 20vh;" %>
        </div>
        <div class="form-group">
          <%= f.label :address, class: "lead" %>
          <%= f.text_field :address, placeholder: "10文字まで", class: "form-control" %>
        </div>
        <div class="mt-5 text-center form-group">
          <%= f.submit'展示する', class: 'btn btn-lg btn-success' %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="mt-3 text-center">
    <%= link_to '< My Photos', member_path(current_member), class: "mr-5 btn btn-secondary" %>
    <%= link_to 'All Photos >', photos_path, class: "btn btn-secondary" %>
  </div>
</div>

<%= render 'layouts/previewimage' %>