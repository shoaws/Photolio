<div class="container">
  <h2>New Photo</h2>
  <div class="row">
    <% if current_member.email == "guest@example.com" && current_member.photos.count > 0 %>
      <p class="mt-5 pt-5 text-center font-weight-bold" style="height: 40vh">
        メンバー登録をして</br>
        もっとたくさんの写真を展示しましょう！
      </p>
    <% else %>
      <%= render 'form', photo: @photo, tag_list: @tag_list, cameras: @cameras %>
    <% end %>
  </div>
  <div class="mt-3 text-center">
    <%= link_to '< My Photos', member_path(current_member), class: "mr-5 btn btn-secondary" %>
    <%= link_to 'All Photos >', photos_path, class: "btn btn-secondary" %>
  </div>
</div>

<%= render 'layouts/previewimage' %>