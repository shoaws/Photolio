<div class="container" style="height: 80vh;">
  <div class="text-danger"><%= flash[:alret] %></div>
  <div class="row">
    <div class="col-4 bg-white" style="height: 80vh;">
      <%= render 'public/members/info', member: @member, best_photo: @best_photo %>
    </div>

    <div class="col-7">
      <div style="height: 70vh;">
        <div class="ml-5 d-flex flex-wrap">
          <% @photos.each do |photo| %>
            <div class="m-1 photo-image">
              <%= link_to photo_path(photo) do %>
                <%= image_tag photo.image, size: "170x170", style: "object-fit: cover;" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <%= paginate @photos %>
      </div>

      <div class="text-right">
        <%= link_to 'All Photos>', photos_path, class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>