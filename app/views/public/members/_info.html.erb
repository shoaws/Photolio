<div class="my-5 d-flex justify-content-center align-items-center">
  <%= image_tag member.get_profile_image, size: "80x80", class: "member-icon" %>
  <h4 class="ml-5"><%= member.nickname %></h4>
</div>

<div class="mb-3" style="height: 100px;">
  <%= member.introduction %>
</div>

<table cellpadding="5" class="mx-auto mb-3 font-weight-bold">
  <tr>
    <td>展示数:<%= member.photos.count %></td>
    <td>
      <%= link_to member_followings_path(member) do %>
        フォロー:<%= member.followings.count %>
      <% end %>
    </td>
    <td>
      <%= link_to member_followers_path(member) do %>
        フォロワー:<%= member.followers.count %>
      <% end %>
    </td>
  </tr>
</table>

<div class="text-center my-5">
  <% if member == current_member %>
    <%= link_to '編集', edit_member_path(member), class: "px-5 btn btn-light" %>
  <% else %>
    <% if current_member.following?(member) %>
      <%= link_to "フォロー外す", member_relationships_path(member.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", member_relationships_path(member.id), method: :post %>
    <% end %>
  <% end %>
</div>

<div>
  <p class="mb-5">お気に入りの1枚</p>
  <div class="text-center">
    <% if member.best_image.attached? %>
      <%= image_tag member.best_image, size: "200x200", style: "object-fit: contain" %>
    <% else %>
      <p>撮影中…</p>
    <% end %>
  </div>
</div>