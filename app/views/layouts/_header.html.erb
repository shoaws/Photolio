<header class="mb-4 bg-white shadow-sm">
  <div class="container">
    <div class="row text-center">
      <% if member_signed_in? %>
        <a class="col-5 text-decoration-none" href="/">Photolio</a>
        <div class="col-7">
          <nav class="navbar navbar-expand-lg navbar-primary">
            <div class="collapse navbar-collapse">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item align-top">
                  <%= link_to 'マイページ', member_path(current_member), class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to '写真館へ', photos_path, class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to '新規投稿', new_photo_path, class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: 'btn btn-outline-info' %>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      <% elsif admin_signed_in? %>
        <a class="col-5 text-decoration-none" href="/"><h1>Photolio</h1></a>
        <div class="col-7">
          <nav class="navbar navbar-expand-lg navbar-primary">
            <div class="collapse navbar-collapse">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path, class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admin_customers_path, class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admin_root_path, class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧", admin_genres_path, class: 'mr-3 btn btn-outline-info' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-info' %>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      <% else %>
        <%= link_to root_path, class: "text-center" do %>
        <h1>
          Photolio</br>
          自分写真館
        </h1>
        <% end %>
      <% end %>
    </div>
  </div>
</header>