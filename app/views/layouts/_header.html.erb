<header class="mb-4 bg-white shadow-sm">
  <div class="container">
    <div class="row text-center">
      <a class="col-5 text-decoration-none" href="/">
        <img src="/assets/Photolio Title.png" style="padding: 10px; width: auto; height:90px"></img>
      </a>
      <div class="col-7 d-flex justify-content-end align-items-center">
        <nav class="navbar navbar-expand-lg navbar-primary">
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <% if member_signed_in? %>
                <li class="nav-item align-top">
                  <%= link_to 'マイページ', member_path(current_member), class: "mr-3 btn btn-outline-info" %>
                </li>
                <li class="nav-item">
                  <%= link_to '写真館へ', photos_path, class: "mr-3 btn btn-outline-info" %>
                </li>
                <li class="nav-item">
                  <%= link_to '新規投稿', new_photo_path, class: "mr-3 btn btn-outline-info" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: "btn btn-outline-info" %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item align-top">
                  <%= link_to "メンバー一覧", admin_root_path, class: "mr-3 btn btn-outline-info" %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿一覧", admin_photos_path, class: "mr-3 btn btn-outline-info" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-info" %>
                </li>
              <% else %>
                <%= link_to "ゲストログイン", members_guest_sign_in_path, method: :post, "data-confirm" => "ゲストメンバーとしてログインします", class: "btn btn-outline-info" %>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>