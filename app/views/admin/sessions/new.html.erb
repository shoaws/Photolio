<div class="container">
  <div class="col-10 mx-auto">

    <h4 class="text-center"><span class="py-2 px-4">管理者ログイン</span></h4>

    <div class="col-8 mt-4 mx-auto">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="form-group row">
          <label class="col-sm-4 col-form-label">メールアドレス</label>
          <div class="col-md-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-4 col-form-label">パスワード</label>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <div class="mt-5 text-center">
          <%= f.submit "ログイン", class: "col-3 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>