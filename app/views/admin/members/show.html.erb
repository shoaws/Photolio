<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="row mb-3 d-flex justify-content-center">
        <div class="col-4">
          <%= image_tag @member.get_profile_image, size: "80x80", class: "mr-3 member-icon" %>
        </div>
        <div class="col-8">
          <table cellpadding="5" class="mx-auto mb-3 font-weight-bold">
            <tr>
              <td>展示数:<%= @member.photos.count %></td>
              <td>フォロー:<%= @member.followings.count %></td>
              <td>フォロワー:<%= @member.followers.count %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <table class="table bg-white border">
          <tr>
            <th style="width: 50%;">名前</th>
            <td><%= @member.last_name %> <%= @member.first_name %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= @member.nickname %></td>
          </tr>
          <tr>
            <th>ステータスメッセージ</th>
            <td><%= @member.introduction %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <th>アカウント状態</th>
            <td>
              <% if @member.is_deleted == false %>
                <span class="text-success font-weight-bold">
                  有効
                </span>
              <% else %>
                <span class="text-secondary">
                  退会
                </span>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-9 mx-auto">
        <%= link_to edit_admin_member_path(@member), class: "px-5 btn btn-success" do %>
          <i class="fa-solid fa-user-plus"></i>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <h3 class="ml-3">投稿一覧</h3>
      <div class="d-flex flex-wrap">
        <% @member.photos.each do |photo| %>
          <div class="m-3">
            <%= link_to admin_photo_path(photo) do %>
              <%= image_tag photo.image, size: "150x150", style: "object-fit: cover;" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>